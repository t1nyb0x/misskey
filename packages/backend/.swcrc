{
	"$schema": "https://swc.rs/schema.json",
	"jsc": {
		"parser": {
			"syntax": "typescript",
			"jsx": true,
			"dynamicImport": true,
			"decorators": true
		},
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true,
			"react": {
				"runtime": "automatic",
				"importSource": "@kitajs/html"
			}
		},
		"experimental": {
			"keepImportAssertions": true
		},
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"target": "es2022"
	},
	"minify": false,
	"sourceMaps": "inline"
}
